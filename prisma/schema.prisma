generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          Role      @default(user)
  image         String?
  siteId        String // ID del sitio
}

model SiteSettings {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  siteName           String
  siteLogoUrl        String?
  description        String
  googleAnalyticsId  String?
  googleTagManagerId String?
  facebookUrl        String?
  twitterUrl         String?
  instagramUrl       String?
  linkedinUrl        String?
  youtubeUrl         String?
  siteColor          String?
  siteColorText      String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  siteId             String // ID del sitio
}

model Hero {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    String
  imageUrl   String?
  heroUrl    String?
  textButton String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  siteId     String // ID del sitio
}

model AboutUs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  siteId      String // ID del sitio
}

model ServiceModule {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  generalTitle       String    // Título general del módulo
  generalDescription String    // Descripción general del módulo
  generalImageUrl    String?   // URL de la imagen general
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  siteId             String    // ID del sitio
}

model Service {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  mediaUrl        String?
  serviceUrl      String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  siteId          String        // ID del sitio
  serviceModuleId String        // ID del módulo de servicio
}


model Parallax {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  siteId      String // ID del sitio
}

model RegistrationForm {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  subject     String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  siteId      String // ID del sitio
}

model Footer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  address     String
  email       String
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  siteId      String // ID del sitio
}
